{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@screens/*": ["screens/*"],
            "@styles/*": ["styles/*"],
            "@constants/*": ["constants/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["models/*"],
            "@components/*": ["components/*"],
            "@store/*": ["store/*"],
            "@svg/*": ["assets/svg/*"],
            "@fonts/*": ["fonts/*"],
            "@hooks/*": ["hooks/*"]
        }
    }
}
